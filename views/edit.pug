extends layout/index

block content
  .row
    .col-md-6.col-md-offset-3
      form.edit-task(action='', role='form', data-id=task.id)
        legend Edit Task:
            strong #{task.title}
        .form-group
          label(for='task') Task
          input.form-control(type='text', name='task', placeholder=task.title)
        button.btn.btn-primary(type='submit') Submit
        
